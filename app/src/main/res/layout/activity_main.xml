        <Button
            android:layout_width="35dp"
            android:layout_height="130dp"
            android:id="@+id/do1_sh"
            android:layout_gravity="bottom"
            android:background="#111010"
            android:layout_alignTop="@+id/do_sh"
            android:layout_toEndOf="@+id/do_sh"
            android:layout_marginLeft="360dp" />

        <Button
            android:layout_width="35dp"
            android:layout_height="130dp"
            android:id="@+id/re1_sh"
            android:layout_gravity="bottom"
            android:background="#111010"
            android:layout_alignTop="@+id/do_sh"
            android:layout_toEndOf="@+id/do_sh"
            android:layout_marginLeft="412dp" />



    </RelativeLayout>
</RelativeLayout>
